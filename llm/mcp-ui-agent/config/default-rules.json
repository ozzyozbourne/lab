{
    "name": "Modern Blue",
    "description": "A clean, modern design with blue accents and smooth animations",
    "theme": {
        "primaryColor": "#3B82F6",
        "backgroundColor": "#FFFFFF",
        "textColor": "#1F2937",
        "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif"
    },
    "layout": {
        "style": "grid",
        "spacing": "normal",
        "maxWidth": "1200px",
        "containerPadding": "20px"
    },
    "components": {
        "buttons": {
            "style": "rounded",
            "size": "medium",
            "textTransform": "none",
            "fontWeight": "500"
        },
        "cards": {
            "shadow": true,
            "border": false,
            "borderRadius": "8px",
            "padding": "16px"
        },
        "inputs": {
            "style": "modern",
            "borderRadius": "6px",
            "borderColor": "#E5E7EB",
            "focusColor": "#3B82F6"
        },
        "headers": {
            "style": "bold",
            "capitalize": false,
            "letterSpacing": "normal"
        }
    },
    "animations": {
        "enabled": true,
        "duration": "normal",
        "easing": "ease",
        "hoverEffects": true
    },
    "colors": {
        "success": "#10B981",
        "warning": "#F59E0B",
        "error": "#EF4444",
        "info": "#3B82F6",
        "neutral": "#6B7280"
    },
    "typography": {
        "baseSize": "16px",
        "scaleRatio": 1.25,
        "lineHeight": 1.6,
        "paragraphSpacing": "1em"
    }
}
